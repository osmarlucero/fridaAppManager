<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="#17ae8a"
    android:background="#ffffff"> <!-- Color de fondo blanco -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:text="Platillo: 1"
            android:textSize="18dp"
            android:id="@+id/tvPlatillo"
            android:textColor="#d4eff0" />

        <TextView
            android:id="@+id/tvObservaciones"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:text="Observaciones: Sin observaciones"
            android:textSize="18dp"
            android:textColor="#d4eff0"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btnEliminar"
        android:textColor="#ffffff"
        android:backgroundTint="#cb658f"
        android:layout_gravity="center_vertical" />

</LinearLayout>
